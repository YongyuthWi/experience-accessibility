<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ea_black"
    tools:context=".SplashActivity">

    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:background="@drawable/dotted_circle_bg">

        <ImageView
            android:id="@+id/headphone"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/headphones"
            android:importantForAccessibility="no" />

        <TextView
            style="@style/SplashPageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_below="@id/headphone"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:gravity="center"
            android:textColor="@color/primary_text_color_white"
            android:text="@string/auditory_splash_intro" />

    </RelativeLayout>

    <TextView
        style="@style/LandingPageBodyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:textColor="@color/primary_text_color_white"
        android:text="@string/google_logo"
        android:drawableLeft="@drawable/ic_baseline_accessibility_24"
        android:drawableTint="@color/ea_white"
        android:drawablePadding="10dp" />

</RelativeLayout>
